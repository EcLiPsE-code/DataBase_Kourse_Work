@model CompanyASP.Models.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Подробно</h2>

<div>
    <h4>Сотрудник компании</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>ФИО</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt>
            <label>Зарплата</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt>
            <label>Возраст</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt>
            <label>Рейтинг</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Raiting)
        </dd>
        <dt>
            <label>Отдел</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Departament.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться назад</a>
</div>
