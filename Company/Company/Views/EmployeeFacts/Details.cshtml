@model CompanyASP.Models.EmployeeFact

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Подробно</h2>

<div>
    <h4>Фактические показатели эффективности сотрудников компании</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Квартал</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quarter)
        </dd>
        <dt>
            <label>Год</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt>
            <label>Квартальная эффективность(%)</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PerfomanceQuarter)
        </dd>
        <dt>
            <label>Годовая эффективность(%)</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PerfomanceYear)
        </dd>
        <dt>
            <label>Сотрудник</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться назад</a>
</div>
